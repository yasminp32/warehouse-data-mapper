{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "*": [
        "./src/*"
      ]
    },
    "resolveJsonModule": true,
    "lib": [
      "DOM",
      "ESNext"
    ],
    "allowJs": false,
    "isolatedModules": true
  },
  "exclude": [
    "node_modules"
  ]
}